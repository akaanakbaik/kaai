{
  "rewrites": [
    {
      "source": "/api/ytdl/:path*",
      "destination": "https://api-ytdlpy.akadev.me/api/v1/ytdl/:path*"
    },
    {
      "source": "/cdn/:path*",
      "destination": "https://api-ytdlpy.akadev.me/cdn/:path*"
    },
    {
      "source": "/api/ssweb",
      "destination": "https://kaai-api.akadev.me/api/ssweb"
    },
    {
      "source": "/api/ai",
      "destination": "https://kaai-api.akadev.me/api/ai"
    },
    {
      "source": "/api/allindl",
      "destination": "https://kaai-api.akadev.me/api/allindl"
    },
    {
      "source": "/api/contact",
      "destination": "https://kaai-api.akadev.me/api/contact"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" }
      ]
    }
  ]
}
